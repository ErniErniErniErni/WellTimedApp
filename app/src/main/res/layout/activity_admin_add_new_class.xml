<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminAddNewClassActivity">

    <EditText
        android:id="@+id/edit_classId"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:hint="Enter class ID"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/edit_grade_num"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:hint="Enter Grade Number"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_classId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/edit_class_num"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:hint="Enter class Number"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_grade_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/checkbox_textview"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:hint="Select Students"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_class_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableEnd="@android:drawable/arrow_down_float"
        android:background="@android:drawable/editbox_background"/>
    <Button
        android:id="@+id/add_new_class_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Add New Class"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>