<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_tiny"
    android:paddingTop="@dimen/margin_tiny"
        >
    <Button
        android:id="@+id/course_card_button"
        android:background="@drawable/rounded_course_card_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible"
        android:text="Subject \n Location \n Teacher"
        android:textSize="@dimen/timetable_course_card_font_size"
        android:paddingRight="@dimen/spacing_zero"
        android:paddingLeft="@dimen/spacing_zero"
        android:paddingTop="@dimen/spacing_zero"
        android:paddingBottom="@dimen/spacing_zero"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginLeft="@dimen/margin_tiny"
        />

</LinearLayout>