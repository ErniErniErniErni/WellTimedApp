<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/add_new_teacher"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:backgroundTint="#ddbea9"
        android:fontFamily="sans-serif"
        android:text="@string/list_of_teacher_add_new_button"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/above_item_list"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="@string/list_of_teacher_above_text"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_small_medium"/>
    <ListView
        android:id="@+id/list_of_teachers"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="match_parent"/>

</LinearLayout>